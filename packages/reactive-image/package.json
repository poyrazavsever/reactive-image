    "interactive"
  ],
  "author": {
    "name": "Poyraz Avsever",
    "email": "poyrazavsever@gmail.com",
    "url": "https://github.com/poyrazavsever"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poyrazavsever/reactive-image.git"
  },
  "homepage": "https://reactive-image.vercel.app",
  "bugs": {
    "url": "https://github.com/poyrazavsever/reactive-image/issues"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
